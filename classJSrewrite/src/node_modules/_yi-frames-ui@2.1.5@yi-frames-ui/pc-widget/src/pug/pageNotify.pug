//- 页面状态
mixin pageNotify(...items)
	each item in items
		.yi-pageNotify&attributes(attributes)

			if(item.block=='1')
				if block
					block
				if item.imgUrl
					img.img(
						src!= item.imgUrl
						width!= item.imgWidth
					)
				
				h1.title!= item.title

				if item.desc
					.desc!= item.desc
				
				

				if item.otherText
					.other
						each im in item.otherText
							span!= im
			
			
			else if(item.block=='2')
				if item.imgUrl
					img.img(
						src!= item.imgUrl
						width!= item.imgWidth
					)

				if block
					block

				h1.title!= item.title

				if item.desc
					.desc!= item.desc
				
				

				if item.otherText
					.other
						each im in item.otherText
							span!= im
			
			else if(item.block=='3')
				if item.imgUrl
					img.img(
						src!= item.imgUrl
						width!= item.imgWidth
					)
				
				h1.title!= item.title
				if block
					block

				if item.desc
					.desc!= item.desc
				
				

				if item.otherText
					.other
						each im in item.otherText
							span!= im
			
			else if(item.block=='4')
				if item.imgUrl
					img.img(
						src!= item.imgUrl
						width!= item.imgWidth
					)
				
				h1.title!= item.title
				

				if item.desc
					.desc!= item.desc
				
				if block
					block

				if item.otherText
					.other
						each im in item.otherText
							span!= im
			

			else
				if item.imgUrl
					img.img(
						src!= item.imgUrl
						width!= item.imgWidth
					)
				
				h1.title!= item.title

				if item.desc
					.desc!= item.desc
				
				if item.otherText
					.other
						each im in item.otherText
							span!= im

				if block
					block
			