//- 列表
mixin list(item)
	.yi-list&attributes(attributes)
		
		.lst-tit.clearfix
			if item.titleInfo
				.yi-fr(class!= item.infoClass)!= item.titleInfo
			h4(class!= item.bigTitleSize)!= item.bigTitle
		- var numClass = 'yi-grids' +  item.grids;
		ul.lst-box.clearfix(class!= numClass)
			-for(i=0; i< item.itemNum ; i++)
				if item.itemImgUrl
					li.item.feed(class!= item.itemClass)
						.item-img
							img.img(src!= item.itemImgUrl)

						.item-hd.clearfix
							if item.itemDate
								span.date!= item.itemDate
							a.link(
								href="####"
								class!= item.itemLinkColor
							)
								if item.itemIcon
									i.icon(class!= item.itemIcon class!= item.itemIconColor)
								.tit(class!= item.itemTitleSize)!= item.tiemTitle
						if item.itemDesc
							.item-bd.clearfix
								div!= item.itemDesc
					
						if block
							.item-ft.clearfix
								block
				else
					
					li.item(class!= item.itemClass)
						.item-hd.clearfix
							if item.itemDate
								span.date!= item.itemDate
							a.link(
								href="####"
								class!= item.itemLinkColor
							)
								if item.itemIcon
									i.icon(class!= item.itemIcon class!= item.itemIconColor)
								.tit(class!= item.itemTitleSize)!= item.tiemTitle
						
						if item.itemDesc
							.item-bd.clearfix
								div!= item.itemDesc
					
						if block
							.item-ft.clearfix
								block






