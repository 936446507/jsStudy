mixin table(...items)
	.yi-table&attributes(attributes)
		each item in items
			if(item.scroll == 'y')
				.table-head(style="padding-right:" + item.scrollYPr)
					table.table-box(class= item.tableClass)
						//- if(item.tableTitle)
							caption #{item.tableTitle}
						if item.num
							colgroup
								each x in item.num
									col(width = x)
						if(item.thVal)
							thead
								tr
									each y in item.thVal
										th(class= y.thClass colspan= y.isColspan rowspan= y.isRowspan)!= y.text
				
				.table-scroll-y
					table.table-box(class= item.tableClass)
						if item.num
							colgroup
								each x in item.num
									col(width = x)
						if item.tdVal
							tbody
								each w in item.tdVal
									tr
										each z in w
											td(class= z.tdClass colspan= z.isColspan rowspan= z.isRowspan)!= z.text
			
			else if(item.scroll == 'x')
				.table-scroll-x
					table.table-box(class= item.tableClass style="width:" +item.scrollXWidth)
						if(item.tableTitle)
							caption #{item.tableTitle}
						if item.num
							colgroup
								each x in item.num
									col(width = x)
						if item.thVal
							thead
								tr
									each y in item.thVal
										th(class= y.thClass colspan= y.isColspan rowspan= y.isRowspan)!= y.text
						if item.tdVal
							tbody
								each w in item.tdVal
									tr
										each z in w
											td(class= z.tdClass colspan= z.isColspan rowspan= z.isRowspan)!= z.text
			else
				table.table-box(class= item.tableClass)
					//- if item.tableTitle
						caption #{item.tableTitle}
					if item.num
						colgroup
							each x in item.num
								col(width = x)
					if item.thVal
						thead
							tr
								each y in item.thVal
									th(class= y.thClass colspan= y.isColspan rowspan= y.isRowspan)!= y.text
					if item.tdVal
						tbody
							each w in item.tdVal
								tr
									each z in w
										td(class= z.tdClass colspan= z.isColspan rowspan= z.isRowspan)!= z.text
			if block
				block