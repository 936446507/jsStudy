//- 标题
mixin title(item)
	.yi-title.first(
		class!= item.first
		class!= item.border
	)&attributes(attributes)
		if item.linkText
			if item.linkHref
				a.yi-fr.other(href!= item.linkHref class!= item.linkColor)!= item.linkText
			else
				.yi-fr.other(class!= item.linkColor)!= item.linkText
		.big-tit(class!= item.titleType)!= item.titleText
			//- | #{}
			if item.subTit
				.subtit!= item.subTit
		if item.iconClass || item.iconText
			i.icon(class!= item.iconClass)!= item.iconText
		if block
			block