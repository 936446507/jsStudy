mixin textarea(...items)
	each item in items
		.yi-txta(
			class!= item.size
			class!= item.disabled
			class!= item.class
		)&attributes(attributes)
			textarea.txta(
					type="text"
					placeholder!= item.placeholder
					disabled!= item.disabled
					class!= item.disabled
					id!= item.id
				)!= item.value
			if item.num
				p.num!= item.num
