mixin select(...items)
	each item in items
		if item.divText
			.yi-select(
				disabled!= item.disabled
				class!= item.disabled
				class!= item.size
				class!= item.class
				id!= item.id
			)&attributes(attributes)
				i.icon
				.sel-tit!= item.divText
				.sel-lst
					ul.lstbox
						each i in item.optionText
							li.sel-item!= i[0]
		else
			select.yi-select(
					disabled!= item.disabled
					class!= item.disabled
					class!= item.size
					class!= item.class
					id!= item.id
				)&attributes(attributes)
					each i in item.optionText
						option!= i[0]
			
				


