mixin radio(...items)
	.yi-radio&attributes(attributes)
		each item in items
			if(item.type=='div')
				label.label(
					class!= item.checked
					class!= item.disabled
					class!= item.block
					class!= item.class
				)
					span.icn
					if item.text
						span.text!= item.text
			else
				label.label(
					class!= item.checked
					class!= item.disabled
					class!= item.block
					class!= item.class
				)
					input.ipt(
						type="radio"
						name!= item.name
						checked!= item.checked
						disabled!= item.disabled
					)
					if item.text
						span.text!= item.text

