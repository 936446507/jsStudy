mixin modal(modals)
	.yi-modal&attributes(attributes)
		if modals.close
			.ml-close!= modals.close
		if modals.title
			.ml-hd!= modals.title
		if modals.text
			.ml-bd
				.text!= modals.text
		.yi-flex.ml-ft
			if modals.btnOk
				button.flex1.ml-btn(type="button" class!=modals.btnOkClass)!= modals.btnOk
			if modals.btnNo
				button.flex1.ml-btn(type="button" class!=modals.btnNoClass)!= modals.btnNo