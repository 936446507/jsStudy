mixin subnav(...items)
	.yi-subnav#MainNav&attributes(attributes)
		ul.nav-box
			each item in items
				- var icnClass = 'icn icn-' +  item.iconName;
				li.nav-item
					if item.link
						a.nav-link(href!= item.link class!= item.active)
							i(class!= icnClass)
							span.text!= item.title
							if item.new
								i.new!= item.new
					else
						a.nav-link(href="javascript:;" class!= item.active)
							i(class!= icnClass)
							span.text!= item.title
							if item.new
								i.new!= item.new
					
					if(item.active == 'active')
						if item.value
							.submenu(style="display:block")
								ul.sublst
									li.sub-item
											a.sub-link.active(href="javascript:;") 选中状态
									each i in item.value
										li.sub-item
											a.sub-link(href="javascript:;")!= i
							if item.lineBlock
								p.line(class!= item.lineBlock)
					else
						.submenu
							ul.sublst
								each i in item.value
									li.sub-item
										a.sub-link(href="javascript:;")!= i
						if item.lineBlock
							p.line(class!= item.lineBlock)