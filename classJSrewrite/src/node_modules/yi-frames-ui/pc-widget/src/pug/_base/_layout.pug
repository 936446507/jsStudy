mixin layout(column)
	.main-body
		if(column == 1)
			.col1-1
				block mainLeft
		//- 单列布局 end

		if(column == 2)
			.main-aside.col2-1
				block mainLeft
			.main-content.col2-2
				block mainRight
		//- 双列左右布局 end

		if(column == 3)
			.col3-1
				block mainLeft
			.col3-2
				block mainContent
			.col3-3
				block mainRight
		//- 三列左中右布局 end