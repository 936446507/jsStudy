mixin modal(...items)
	each item in items
		.yi-modal(
			class!= item.size
			class!= item.class
		)&attributes(attributes)
			if item.close
				.ml-close.close Ã—
			if item.title
				.ml-hd(class!= item.titAlign)!= item.title
			if item.text
				.ml-bd(class!= item.textAlign class!= item.scroll)
					.text!= item.text
			
			.ml-ft(class!= item.btnAlign)
				if item.btnOk
					button.yi-btn.btnok(type="button" class!=item.btnOkClass)!= item.btnOk
				if item.btnNo
					button.yi-btn.btnno(type="button" class!=item.btnNoClass)!= item.btnNo
				.yi-fl
					if item.noRmding
						.yi-check.ml-ftcon.ml-rmding
							label.label
								span.icon
								span.text!= item.noRmding
					if item.otherText
						.ml-ftcon.ml-other(class!= item.otherClass)!= item.otherText
			if block
				block