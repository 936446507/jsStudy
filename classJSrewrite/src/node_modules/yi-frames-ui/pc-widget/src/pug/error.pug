//- 无数据、错误提示
mixin error(...items)
	each item in items
		if(item.block=='block' || item.nodata=='nodata')
			.yi-error(
				class!= item.nodata
				class!= item.color
			)&attributes(attributes)
				i.icon(
					class!= item.iconClass
				)
				span.txt!= item.text
		else
			.yi-error.inline(
				class!= item.color
			)&attributes(attributes)
				i.icon(
					class!= item.iconClass
				)
				span.txt!= item.text