mixin header(...items)
	.yi-header&attributes(attributes)
		.head-ctnr
			h1.yi-fl.hd-logo
				a.link(href="####")
			//- logo end

			ul.yi-fl.hd-menu
				each item in items
					li.item(class!= item.active)
						if item.arrow
							a.link.link-arr(href!= item.href)!= item.text
								i.arrow
						else
							a.link(href!= item.href)!= item.text
			//- 主导航 end

			.yi-fr.hd-login
				a.link.link-cen(href="####") #[i.icon.icon-center]
				a.link.link-quit(href="####") #[i.icon.icon-shutdown]#[span 登出]
				if block
					block
			//- 登录推出 end