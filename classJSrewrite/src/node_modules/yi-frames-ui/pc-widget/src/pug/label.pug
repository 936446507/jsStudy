mixin label(...items)
	.yi-label&attributes(attributes)
		each item in items
			if(item.type== 'bor-primary' || item.type== 'bor-success' || item.type== 'bor-danger' || item.type== 'bor-stress' || item.type== 'bor-warning' || item.type== 'bor-info' || item.type== 'bor-base' || item.type== 'bor-gray' || item.type== 'bor-grayer' || item.type== 'bor-disa' || item.type== 'bor-white')
				span.bor(class!= item.type)!= item.text
			else
				span(class!= item.type)!= item.text