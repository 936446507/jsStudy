mixin button(...items)
	each item in items
		//- a
		if (item.labelType == 'a')
			a.yi-btn(href="####" class!=item.type ,
				class!=item.size,
				disabled!=item.disabled,
				class!=item.disabled,
				class!=item.round,
				class!=item.load,
			)&attributes(attributes)!= item.text

		//- div
		else if (item.labelType=='div')
			.yi-btn(class!=item.type ,
				class!=item.size,
				disabled!=item.disabled,
				class!=item.disabled,
				class!=item.round,
				class!=item.load,
			)&attributes(attributes)!= item.text
			
		
		//- span
		else if (item.labelType == 'span')
			span.yi-btn( class!=item.type ,
				class!=item.size,
				disabled!=item.disabled,
				class!=item.disabled,
				class!=item.round,
				class!=item.load,
			)&attributes(attributes)!= item.text
		
		//- button
		else
			button.yi-btn(class!=item.type ,
				class!=item.size,
				disabled!=item.disabled,
				class!=item.disabled,
				class!=item.round,
				class!=item.load,
			)&attributes(attributes)!= item.text

