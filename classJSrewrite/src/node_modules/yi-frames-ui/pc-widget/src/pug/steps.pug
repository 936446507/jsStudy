mixin step(grids, ...items)
    - var numClass = 'yi-grids' +  grids.grids;
    .yi-steps(class!= numClass)&attributes(attributes)
        each item in items
            .item(
                class!= item.finish
                class!= item.active
                class!= item.last
            )
                .line
                    .hr
                .icon!= item.icon
                .tit!= item.title
        .clear