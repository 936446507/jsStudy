mixin checkBox(...items)
	.yi-check&attributes(attributes)
		each item in items
			if(item.type=='div')
				label.label(
					class!= item.checked,
					class!= item.disabled,
					class!= item.block
				)&attributes(attributes)
					span.icn
					if item.text
						span.text!= item.text
			else
				label.label(
					class!= item.checked
					class!= item.disabled
					class!= item.block
				)
					input.ipt(
						type="checkbox"
						name!= item.name
						checked!= item.checked
						disabled!= item.disabled
					)
					if item.text
						span.text!= item.text

