@import "/static/css/vendor.wxss";

page {
  position: relative;
  background: linear-gradient(to bottom right, #311c74, #6C3199 100%);
  background: -webkit-linear-gradient(top left, #311c74, #6C3199 100%);
  background-size: 100% 100%;
}
.question {
  display: block;
  position: relative;
  padding: 77rpx 30rpx 40rpx;
  margin: 0 30rpx 100rpx;
  -webkit-box-shadow: 0 0 20rpx 0 rgba(75,44,139,0.25);
  box-shadow: 0 0 20rpx 0 rgba(75,44,139,0.25);
  -webkit-border-radius: 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
.zhanshi {
  padding: 10rpx 35rpx;
  color: #fff;
  font-size: 28.000000000000004rpx;
}
.qus-title {
  margin-bottom: 77rpx;
  font-size: 30rpx;
  color: #353B52;
}
.qus-box {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.qus-list ._li .choice-item {
  display: block;
  margin: 20rpx auto 0;
  padding: 30rpx 30rpx 34rpx;
  color: #2F3D48;
  font-size: 26rpx;
  text-align: center;
  -webkit-box-shadow: 0 0 10rpx 0 rgba(49,32,114,0.16);
  box-shadow: 0 0 10rpx 0 rgba(49,32,114,0.16);
  -webkit-border-radius: 80rpx;
  border-radius: 80rpx;
  background: #fff;
}
.qus-list ._li.li-focus .choice-item {
  background: #7044d3;
  color: #FFF;
}
#Question {
  padding-top: 57.99999999999999rpx;
}
#Question {
  padding-bottom: 60rpx;
}
.public-btn {
  padding: 32rpx;
  margin: 0 30rpx 0;
  text-align: center;
  font-size: 34rpx;
  color: #312072;
  background: #FDCC1E;
  -webkit-box-shadow: 0 0 12rpx 0 rgba(77,144,242,0.16);
  box-shadow: 0 0 12rpx 0 rgba(77,144,242,0.16);
  -webkit-border-radius: 100rpx;
  border-radius: 100rpx;
}
.public-btn-gray {
  color: #FFF;
  background: #9790A8;
}